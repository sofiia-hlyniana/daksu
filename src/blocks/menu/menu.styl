.menu
	font-size 0
	&__item
		display inline-block
		vertical-align top
		margin 0 22px
		&:first-child
			margin 0 22px 0 0
		&:last-child
			margin 0 0 0 22px
	&__link
		padding-bottom 10px
		color rgba(255,255,255,.72)
		font-size 16px
		text-decoration none
		font-weight normal
		&:after
			background rgba(255,255,255,.72)
