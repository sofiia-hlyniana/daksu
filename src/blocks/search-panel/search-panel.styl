buttonHeight = 52px

.search-panel
	padding 30px 0 45px
	&__form
	&__buttons-list
	&__add-button
		float left
		width 33.33333%
	&__form
		margin 12px 0 0
	&__input-wrapper
		position relative
		width 48.5%
		height 37px
	&__input
		width 100%
		height 100%
	&__icon
		position absolute
		top 10px
		left 11px
		color grayColor
		width 16px
		height 16px
	&__buttons-list
		margin 13px 0 0
		padding 0
		list-style-type none
		text-align center
		font-size 0
		letter-spacing 0
	&__button
		display inline-block
		vertical-align middle
		padding 9px 16px
		border-left 1px solid #D6DCE7
		border-right 1px solid #D6DCE7
		font-size 12px
		font-weight 600
		color grayColor
		text-align center
		background-color inactiveColor
		cursor pointer
		transition background-color .15s ease-in-out, color .15s ease-in-out, border-color .15s ease-in-out
		&:hover
		&.active
			background-color violetColor
			border-color violetColor
			color #ffffff
		&:first-child
			border-left none
			border-radius 4px 0 0 4px
		&:last-child
			border-right none
			border-radius 0 4px 4px 0
	&__btn
		width buttonHeight
		height buttonHeight
		background neonGreenColor
		outline none
		border none
		border-radius 100%
		cursor pointer
		box-shadow 0 4px 12px rgba(75, 227, 198, .5)
	&__add
		&-button
			padding-right 10px
			text-align right
		&-icon
			display inline-block
			vertical-align middle
			line-height buttonHeight
			color #ffffff
			font-size 24px