buttonHeight = 52px

.search-panel
	padding 30px 0
	@media phone
		padding 0 0 30px
	&__form
	&__buttons-list
	&__add-button
		float left
		width 33.33333%
		@media phone
			float none
			width 100%
	&__form
		margin 12px 0 0
		@media tablet
			width 40%
		@media phone
			position absolute
			left 0
			right 0
			margin 0
	&__input
		width 100%
		height 100%
		&-wrapper
			position relative
			width 48.5%
			height 37px
			@media tablet
				width 88.5%
			@media phone
				width 100%
				height 40px
	&__icon
		position absolute
		top 10px
		left 11px
		color grayColor
		width 16px
		height 16px
	&__buttons-list
		margin 13px 0 0
		padding 0
		list-style-type none
		text-align center
		font-size 0
		letter-spacing 0
		@media tablet
			width 40%
		@media phone
			width 100%
			margin 66px 0 0
	&__button
		display inline-block
		vertical-align middle
		padding 6px 16px
		border-left 1px solid #D6DCE7
		border-right 1px solid #D6DCE7
		font-size 12px
		font-weight 600
		color grayColor
		text-align center
		background-color inactiveColor
		cursor pointer
		transition background-color .15s ease-in-out, color .15s ease-in-out, border-color .15s ease-in-out
		&:hover
			background-color hoverColor
			border-color hoverColor
		&.active
			background-color violetColor
			border-color violetColor
			color #ffffff
		&:first-child
			border-left none
			border-radius 4px 0 0 4px
		&:last-child
			border-right none
			border-radius 0 4px 4px 0
	&__btn
		width buttonHeight
		height buttonHeight
		background neonGreenColor
		outline none
		border none
		border-radius 100%
		cursor pointer
		box-shadow 0 4px 12px rgba(75, 227, 198, .5)
	&__add
		&-button
			padding-right 10px
			text-align right
			@media tablet
				float right
				width 20%
			@media phone
				display none
		&-icon
			display inline-block
			vertical-align middle
			line-height 56px
			color #ffffff
			font-size 24px