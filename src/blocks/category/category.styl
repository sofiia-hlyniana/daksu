.category
	&__header
		margin 0 0 20px
	&__title
		position absolute
		top 6px
		left 12px
		font-weight 600
		font-size 12px
	&__filter
		margin 0 18px 0 0
	&__list
		margin 0 -15px 12px
		padding 0
		list-style-type none
	&__item
		display inline-block
		vertical-align top
		width 182px
		height 210px
		margin 0 18px 41px
		border 1px solid #E8E8E8
		border-radius 4px
		@media phone
			height 182px
			margin 0 15px 13px
	&__link
		position relative
		display block
		height 100%
		padding 44px 20px 15px
		text-align center
		color grayColor
		text-decoration none
		&:hover
		&:active
			color siteColor
			.path
				fill blueColor
			.category__product-arrow
				display block
				opacity 1
	&__product
		&-image
			display block
			margin 0 0 10px
			svg
				height 73px
				width 73px
		&-title
			display table-cell
			margin 0
			text-align center
			vertical-align middle
		&-arrow
			position absolute
			right 8px
			top 8px
			display none
			width 18px
			height 18px
			border 1px solid #E8E8E8
			border-radius 4px
			color grayColor
			opacity 0
			cursor pointer
			transition opacity .15s ease-out
		&-badge
			position absolute
			top 3px
			left 2px
			padding 2px 5px
			background neonGreenColor
			color #ffffff
			font-weight 700
			font-size 10px
			border-radius 6px
	&__title-wrapper
		display table
		width 100%
		height 60px
