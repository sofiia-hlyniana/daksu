placeholderTrans()
	transition opacity .3s ease

.form-control
	padding 5px 35px
	background-color #ffffff
	border 1px solid #E8E8E8
	border-radius 30px
	font-size 14px
	color siteColor
	outline none
	box-shadow none
	-webkit-appearance none
	@media phone
		border-radius 0
		box-shadow 0 1px 0 #E8E8E8
	&::-webkit-input-placeholder
		opacity 1
		placeholderTrans()
	&::-moz-placeholder
		opacity 1
		placeholderTrans()
	&:-moz-placeholder
		opacity 1
		placeholderTrans()
	&:-ms-input-placeholder
		opacity 1
		placeholderTrans()
	&:focus::-webkit-input-placeholder
		opacity 0
		placeholderTrans()
	&:focus::-moz-placeholder
		opacity 0
		placeholderTrans()
	&:focus:-moz-placeholder
		opacity 0
		placeholderTrans()
	&:focus:-ms-input-placeholder
		opacity 0
		placeholderTrans()


form
	width 100%

fieldset
	padding 0
	margin 0
	border 0 none
	min-width 0


[type="checkbox"]
	&:not(:checked)
	&:checked
		position absolute
		left -9999px

[type="checkbox"]:not(:checked) + label
[type="checkbox"]:checked + label
	position relative
	padding-left 30px
	cursor pointer


[type="checkbox"]:not(:checked) + label:before
[type="checkbox"]:checked + label:before
	content ""
	position absolute
	left 0
	top 2px
	width 16px
	height 16px
	border 1px solid rgba(162, 165, 175, .4)
	border-radius 2px
	transition border-color .2s ease-in-out

[type="checkbox"]:checked + label:before
	border-color rgba(92, 122, 234, .5)

[type="checkbox"]:not(:checked) + label + span
[type="checkbox"]:checked + label + span
	content ''
	position absolute
	top 1px
	left 3px
	color #5C7AEA

[type="checkbox"]:not(:checked) + label + span
	opacity 0
	transform scale(0)

[type="checkbox"]:checked + label + span
	opacity 1
	transform scale(1)

[type="checkbox"]:disabled:not(:checked) + label:before
[type="checkbox"]:disabled:checked + label:before
	box-shadow none
	border-color #bbb
	background-color #ddd
