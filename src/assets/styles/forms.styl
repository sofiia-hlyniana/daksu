placeholderTrans()
	transition opacity .3s ease

.form-control
	font-size 24px
	border-radius 0
	background-color #ffffff
	outline none
	-webkit-appearance none
	&:focus
		border-color blueColor
	&::-webkit-input-placeholder
		opacity 1
		placeholderTrans()
	&::-moz-placeholder
		opacity 1
		placeholderTrans()
	&:-moz-placeholder
		opacity 1
		placeholderTrans()
	&:-ms-input-placeholder
		opacity 1
		placeholderTrans()
	&:focus::-webkit-input-placeholder
		opacity 0
		placeholderTrans()
	&:focus::-moz-placeholder
		opacity 0
		placeholderTrans()
	&:focus:-moz-placeholder
		opacity 0
		placeholderTrans()
	&:focus:-ms-input-placeholder
		opacity 0
		placeholderTrans()


form
	width 100%

fieldset
	padding 0
	margin 0
	border 0 none
	min-width 0